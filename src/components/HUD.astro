---
interface Props {
  totalCapital: string;
}
const { totalCapital } = Astro.props;
---

<div id="hud">
  <div>
    <div class="hud-title">STARTUP GRAVEYARD</div>
    <a href="/" style="font-family:var(--px);font-size:0.3rem;color:var(--text-dim);text-decoration:none;letter-spacing:0.1em;pointer-events:auto;display:block;margin-top:0.3rem;transition:color 0.3s;">&larr; HOME</a>
  </div>
  <div class="hud-right">
    <div class="hud-stat">CAPITAL LOST: <span class="val" id="hudCap">{totalCapital}</span></div>
    <div class="hud-hint">SCROLL AROUND &middot; CLICK A GRAVE TO READ ITS OBITUARY</div>
    <div class="minimap" id="minimap">
      <div class="mm-viewport" id="mmViewport"></div>
    </div>
  </div>
</div>

<div class="nav-hint" id="navHint">
  <span class="key">WASD</span> / <span class="key">ARROWS</span> / DRAG TO EXPLORE<br />
  CLICK A TOMBSTONE TO READ ITS STORY
</div>
