<div id="postOverlay">
  <div class="stone-wrapper" id="stoneWrapper">
    <!-- Cracks & moss overlaid -->
    <div class="stone-crack crack-1"></div>
    <div class="stone-crack crack-2"></div>
    <div class="stone-moss moss-1"></div>
    <div class="stone-moss moss-2"></div>

    <!-- Arch top (fixed header) -->
    <div class="stone-arch">
      <button class="close-btn" id="closeBtn">X</button>
      <div class="stone-arch-content" id="stoneHeader">
        <!-- Filled by JS from template -->
      </div>
    </div>

    <!-- Scrollable stone body -->
    <div class="stone-body" id="stoneBody">
      <div class="stone-body-inner" id="stoneBodyInner">
        <!-- Filled by JS from template -->
      </div>
    </div>

    <!-- Base -->
    <div class="stone-base"></div>
    <div class="stone-dirt"></div>
  </div>
</div>
