<div id="postOverlay">
  <div class="crib-wrapper" id="cribWrapper">
    <!-- Decorative stars -->
    <div class="crib-star star-1"></div>
    <div class="crib-star star-2"></div>

    <!-- Headboard (fixed header) -->
    <div class="crib-headboard">
      <button class="n-close-btn" id="closeBtn">X</button>
      <div class="crib-headboard-content" id="cribHeader">
        <!-- Filled by JS from template -->
      </div>
    </div>

    <!-- Scrollable crib body -->
    <div class="crib-modal-body" id="cribBody">
      <div class="crib-modal-body-inner" id="cribBodyInner">
        <!-- Filled by JS from template -->
      </div>
    </div>

    <!-- Base rail -->
    <div class="crib-base-rail"></div>
  </div>
</div>
